doctype html
html(lang='en')
  head
    base(href='/')
    title Fullstack Academy Generated Application
    link(rel='stylesheet', type='text/css', href='/bootstrap/dist/css/bootstrap.css')
    link(rel='stylesheet', type='text/css', href='/style.css')
    script(src='/lodash/index.js')
    script(src='/angular/angular.js')
    script(src='/angular-ui-router/release/angular-ui-router.js')
    script(src='/angular-bootstrap/ui-bootstrap.js')
    script(src='/angular-bootstrap/ui-bootstrap-tpls.js')
    script(src='/socket.io-client/socket.io.js')

    if ENV == 'development'
      for file in jsFiles()
        script(src="#{file}")
    else
      script(src='/main.js')

  body(ng-app='FullstackGeneratedApp')
    navbar
    .container
      #main(ui-view='')
